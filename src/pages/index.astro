---
const title = "Victor's Space";
const description = "blogging and journaling";


import '../styles/global.css'
import Layout from '../layouts/Layout.astro'
import '@fontsource/poppins/500.css';
import '@fontsource/poppins/700.css';
import '@fontsource/poppins/900.css';
---

<Layout title={title}>

    <section class="hero">
        <div class="hero-text">
            <h1 class="greetings">HELLO! I AM</h1>
            <h1 class="name">victor</h1>
            <p class="value">
                I'm a programmer and a software developer.
                I will help you build exceptional user
                experiences through clean, responsive, and 
                visually appealing web interfaces.
                </p>
        </div>

        <div class="call-to-action">
                <div class="main-btn">
                    <a class="btn">Resume</a>
                    <a class="btn two">Hire me</a>
                </div>
        </div>
    </section>
</Layout>

<style>
	section {
        padding: 0;
        margin: 0;
        background: linear-gradient(-45deg, #729ed7, #58c5ef, #230327, #042835);
        background-size: 400% 400%;
    }

    .hero {
       
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .hero-text {
        padding: 0;
        text-align: center;
    }

    .greetings {
        font-size: 4em;
        font-weight: 800;
        letter-spacing: 5px;
        background: linear-gradient(-45deg, #3d510a, #efe558, #ee07bc, #48dbf8);
        background-size: 400% 400%;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }
   
    .hero-text h1 {
        line-height: 0.8em;
        margin: 30px 0 30px;
    }

    .name {
        font-size: 10em;
        font-weight: 900;
        line-height: 1.2;
        z-index: 2;
        text-transform: uppercase;
        color: transparent;
        background-image: linear-gradient(to right, #e61eff, #41c8ff, #e61eff, #41c8ff);
        -webkit-background-clip: text;
        animation: animate 10s linear infinite;
        background-size: 1000%;
    }           
        @keyframes animate {
            0%{
                background-position: 0% 100%;
            }
            50%{
                background-position: 100% 0%;
            }
            100%{
                background-position: 0% 100%;
            }
            }

    p {
        animation-name: fade-in;
        animation-duration: 7s;
    }
    @keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

    .call-to-action {
        display: flex;
        flex-direction: column;
    }
    .value {
        text-align: center;
        padding: 0 20em 0 20em;
        background: linear-gradient(-25deg, #ee07bc, #48dbf8);
        background-size: 400% 400%;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }
    .main-btn {
        padding-top: 10px;
        align-items: center;
    }

    .btn {
        display: inline-block;
        padding: 10px 34px;
        background: black;
        color: rgb(255, 255, 255);
        text-align: center;
        border: 2px solid transparent;
        font-weight: 600;
        border-radius: 40px;
        cursor: pointer;
        background: var(--blue-gradient);
        background-image: linear-gradient(to left top, #e61eff, #41c8ff, #05dfe2, #41c8ff, #41c8ff);
        background-size: 200% 400%;
        background-position: 100%;
        transition: all 0.6s ease-in-out;
    }
    .btn:hover {
        transform: translateY(-5px);
        background: transparent;
        color: #41c8ff;
        background-position: 0%;
    }
    .two {
        background: transparent;
        border: 2px solid var(--blue-gradient);
        color: var(--blue-gradient);
        margin-left: 25px;
    }
    .two:hover {
        transform: translateX(-5px);
        background: #41c8ff;
        color: aliceblue;
        border: 2px solid transparent;
        margin-left: 10px;
    }

    @media (max-width: 800px) {
        section { 
            transition: .2s;
            display: flex;
        }
        h1, .name {
            font-size: 5em;
            font-weight: 900;
        }
        .greetings {
            font-size: 1.8em;
            font-weight: 700;
            padding-left: 10%;
            letter-spacing: 10px;
        }
        .main-btn {
           display: flex;
           flex-direction: column; 
        }
        .main-btn .btn {
            padding: 0;
            margin: 5px;
            width: 300px;
            height: 30px;
        }
        .value {
        padding: 0 0.8em 0 0.8em;
    }
    }
</style>
