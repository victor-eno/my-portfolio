---
const title = "Victor's blog";
const description = 'new blog post';
const permalink = '${Astro.site.href}blog';
const FirstName = 'infinite';
const secondName = 'unordered';
const blogName = 'The blog';

const allPosts = await Astro.glob('../pages/posts/*.md');


import '../styles/global.css'
import Layout from '../layouts/Layout.astro'
import '@fontsource/poppins/500.css';
import '@fontsource/poppins/700.css';
import '@fontsource/poppins/900.css';
---
  
<Layout title={title} description={description} permalink={permalink} current="blog">
    <section>
            <h1 class="blog-theme infinte">{FirstName}</h1>
            <h1 class="blog-theme unordered">{secondName}</h1>
            <span class="leading-theme">{blogName}</span>

      <div class="blog-content-wrapper">
        {allPosts.slice(0, 10).map((post) => (
          <article>
            <h1>{post.frontmatter.title}</h1>
            <p>{post.frontmatter.description}</p>
              <a href={post.url}>Read more...</a>
          </article>
        ))}
      </div>
    </section>
</Layout>

<style>
  section {
    padding: 80px 10px 0px 10px;
  }
  .blog-content-wrapper {
    padding-top: 50px;
  }
  .blog-content-wrapper h1 {
    font-family: 'Poppins', sans-serif;
    font-size: 1.7em;
    color: var(--white)
    margin: 0;
    font-weight: 900;
  }
  .blog-content-wrapper p {
    font-size: 16px;
    color: rgb(189, 220, 248);
  }
  .blog-content-wrapper a {
    color: rgb(107, 207, 254);
    text-decoration: none;
    font-family: 'Poppins', Courier, monospace;
    font-weight: 900;
    cursor: pointer;
  }
  article {
    margin: 8px;
    padding:30px 0 10px 0;
  }

  .blog-theme {
      font-family: 'Poppins', sans-serif;
      font-size: 4em;
      line-height: 0.001em;
      margin: 0;
      padding: 35px 10px;
      font-weight: 800;
      background-image: linear-gradient(to left,  #0773ba, #efe558, #ee07bc, #48dbf8);
      background-size: 400% 400%;
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
  }
  .unordered h1 {
    margin-bottom: 10px;
    background-image: linear-gradient(to left,  #3d510a, #efe558, #ee07bc, #48dbf8);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }
  .leading-theme {
        font-size: 2.7em; 
        font-family: 'Poppins', sans-serif;
        font-weight: 900;
        padding-left: 15px;
        background-image: linear-gradient(to left,  #3d510a, #efe558, #ee07bc, #48dbf8);
        background-size: 400% 400%;
       -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .blog-content-wrapper h1 {
      color: #f0a7f9;
    }


  @media (max-height: 800px) {
    .blog-content-wrapper {
      margin: 0 auto;
      max-width: 42em;
      width: 100%;
      min-height: 400px;
    }
  }
</style>